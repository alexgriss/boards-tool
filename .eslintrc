{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "env": { "es6": true },
  "plugins": [
    "@typescript-eslint",
    "react-hooks",
    "simple-import-sort"
  ],
  "extends": [
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "react/prop-types": "off",
    "prettier/prettier": 2,
    "simple-import-sort/imports": [
      "warn",
      {
        "groups": [
          ["^react", "^@?\\w"],
          ["^(@dnd-kit*)"],
          ["^(@tanstack*)"],
          ["^(@/app*)"],
          ["^(@/pages*)"],
          ["^(@/widgets*)"],
          ["^(@/features*)"],
          ["^(@/entities*)"],
          ["^(@/shared*)"],
          ["^\\u0000"],
          ["^\\.\\.(?!/?$)", "^\\.\\./?$"],
          ["^\\./(?=.*/)(?!/?$)", "^\\.(?!/?$)", "^\\./?$"],
          ["^.+\\.?(css)$"]
        ]
      }
    ]
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "detect"
    }
  }
}